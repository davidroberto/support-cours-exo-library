{% extends 'base.html.twig' %}


{% block main %}

    <h1 class="title">Tous les Auteurs :</h1>

    {% for author in authors %}

        <div class="container">

            <p>{{ author.firstname }} {{ author.name }}</p>

            <a href="{{ path('authors_show', {'id' : author.id}) }}">Voir l'auteur</a>

        </div>
        <hr>
    {% endfor %}

{% endblock %}